from OGR_exp import OGR_exp
from OGR_tab1 import OGR_tab1
from OGR_zav import OGR_zav

def OGR_calc(Metod, P_MPA):
    """
    Расчёт газового фактора (КГФ) по выбранному методу.

    Параметры:
    - Metod (str): метод расчёта ('Экспер. данные', 'Типовая зависимость', 'Табличные данные', 'Газовое месторождение')
    - P_MPA (float): давление, МПа

    Возвращает:
    - OGR (float): газовый фактор, м³/т
    """
    metod = Metod.strip().lower()

    if P_MPA == 0:
        return 0.0

    if metod == 'экспер. данные':
        return OGR_exp(P_MPA)
    elif metod == 'типовая зависимость':
        return OGR_zav(P_MPA)
    elif metod == 'табличные данные':
        return OGR_tab1(P_MPA)
    elif metod == 'газовое месторождение':
        return 0.0
    else:
        raise ValueError(f"Неизвестный метод КГФ: '{Metod}'")
